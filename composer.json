{
    "name": "laraplatform/core",
    "description": "This is Lara Platform Core",
    "keywords": [
        "laraplatform",
        "laravel",
        "core",
        "wordpress",
        "Lara Platform"
    ],
    "homepage": "https://github.com/LaraPlatform/core",
    "license": "MIT",
    "authors": [
        {
            "name": "Nguyen Van Hau",
            "email": "nguyenvanhau.soft@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^9.0",
        "livewire/livewire": "^2.10"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "LaraPlatform\\Core\\": "src",
            "LaraPlatform\\Core\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaraPlatform\\Core\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaraPlatform\\Core\\CoreServiceProvider"
            ],
            "aliases": {
                "LaraCore": "LaraPlatform\\Core\\Facades\\Core"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
